<%= render('layouts/errors', :object => @comment) %>

<%= form_for [@post, @comment] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :text %>
  <%= f.text_field :text %>
  <% if @oldComment != nil %>
    <%= f.hidden_field :reply_id, :value => @oldComment.id %>
  <% end %>
  <p><%= f.submit %></p>
<% end %>
