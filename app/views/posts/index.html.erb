<h1>Posts</h1>

<ol>
  <% @posts.each do |post| %>
    <li>
      <%= button_to '+1', post_upvote_path(post), method: :post  %>
      <%= post.score  %> |
      <%= link_to post.title, post.content %> |
      <%= link_to "comments", post_path(post) %>
    </li>
  <% end %>
</ol>

<%= link_to "New Post", new_post_path %>
